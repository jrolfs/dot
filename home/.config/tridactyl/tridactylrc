" NB: If you want "vim-like" behaviour where removing a line from
" here makes the setting disappear, uncomment the line below.
sanitise tridactyllocal tridactylsync

"
" Settings

colorscheme dark

set smoothscroll true

set allowautofocus true

set hintfiltermode vimperator-reflow
set hintuppercase false

set tabopencontaineraware true

set profiledir jamie


"
" Bindings

bind <C-P> pin

bind J tabprev
bind K tabnext

bind <C-n> ex.next_completion
bind <C-p> ex.prev_completion

" Yank repository URL as `origin` for sources and forks
bind yg composite js "gfc " + document.location.href.replace(/https?:\/\//,"git@").replace("/",":").replace(/$/,".git") | clipboard yank
" Yank repository URL as `upstream`
bind yG composite js "gfc -o upstream " + document.location.href.replace(/https?:\/\//,"git@").replace("/",":").replace(/$/,".git") | clipboard yank

" Make gu take you back to subreddit from comments
bindurl reddit.com gu urlparent 4

" Allow Ctrl-a to select all in the commandline
unbind --mode=ex <C-a>


"
" Containers

" containercreate work orange chill

"
" Contained

" social
aucon facebook\.com  social
aucon messenger\.com social
aucon pinterest\.com social
aucon instagram\.com social
aucon reddit\.com    social


